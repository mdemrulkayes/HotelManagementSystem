@page "/ResetPassword"
@layout AuthenticationLayout
@inherits ResetPasswordBase


<div class="row">
    <div class="offset-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title" style="font-weight:bold; color:purple">Reset Your Password</h5>
                <EditForm Model="@ResetPasswordVm" OnValidSubmit="@HandelResetPassword">
                    <DataAnnotationsValidator />
                    <input type="hidden" @bind="ResetPasswordVm.UserId" />
                    <input type="hidden" @bind="ResetPasswordVm.Token" />
                    <div class="form-group">
                        @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                        {
                            <Error ErrorMessage="@ErrorMessage" />
                        }
                        @if (!string.IsNullOrWhiteSpace(SuccessMessage))
                        {
                            <Success SuccessMessage="@SuccessMessage" />
                        }
                    </div>
                    <div class="form-group">

                        <InputText class="form-control" type="password" @bind-Value="ResetPasswordVm.NewPassword" placeholder="New Password"></InputText>
                        <ValidationMessage For="@(() => ResetPasswordVm.NewPassword)" />
                    </div>
                    <div class="form-group">
                        <InputText class="form-control" type="password" @bind-Value="ResetPasswordVm.ConfirmNewPassword" placeholder="New Password"></InputText>
                        <ValidationMessage For="@(() => ResetPasswordVm.ConfirmNewPassword)" />
                    </div>
                    <div class="form-group">
                        @if (IsProcessStart)
                        {
                            <button class="btn btn-primary btn-block" disabled="disabled" type="button"><i class="fa fa-spin fa-spinner"></i> Processing..</button>
                        }
                        else
                        {
                            <input type="submit" class="btn btn-primary btn-block" value="Reset Password" />
                        }
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
