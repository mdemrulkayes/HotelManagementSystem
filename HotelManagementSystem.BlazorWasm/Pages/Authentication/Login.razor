@page "/login"
@layout AuthenticationLayout
@inherits LoginBase


<div class="row">
    <div class="offset-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title" style="font-weight:bold; color:purple">Login</h5>
                <EditForm Model="@authenticationDTO" OnValidSubmit="@HandelLogin">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                        {
                            <Error ErrorMessage="@ErrorMessage" />
                        }
                        @if (!string.IsNullOrWhiteSpace(SuccessMessage))
                        {
                            <Success SuccessMessage="@SuccessMessage" />
                        }
                    </div>
                    <div class="form-group">
                        <input class="form-control" @bind="authenticationDTO.UserName" placeholder="Email address" />
                        <ValidationMessage For="@(() => authenticationDTO.UserName)" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" @bind="authenticationDTO.Password" placeholder="Password" />
                        <ValidationMessage For="@(() => authenticationDTO.Password)" />
                    </div>
                    <div class="form-group">
                        @if (IsProcessStart)
                        {
                            <button class="btn btn-primary btn-block" disabled="disabled" type="button"><i class="fa fa-spin fa-spinner"></i> Processing..</button>
                        }
                        else
                        {
                            <input type="submit" class="btn btn-primary btn-block" value="Login" />
                        }

                    </div>
                    <div class="form-group">

                        <button class="btn btn-primary btn-block" type="button" @onclick="HandleFbLogin">Login with facebook</button>

                    </div>
                    <div class="form-group">
                        <NavLink class="font-weight-normal text-center" href="forgot-password">Forgot Password?</NavLink>
                    </div>
                    <div class="form-group">
                        <NavLink class="font-weight-normal text-center" href="registration">Create new account</NavLink>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
