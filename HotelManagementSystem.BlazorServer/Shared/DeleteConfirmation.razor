@inherits DeleteConfirmationBase


<div class="modal fade show d-block" data-backdrop="static" data-keyboard="false" id="exampleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@ConfirmationTitle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                        @onclick="() => OnConfirmationChange(false)">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ConfirmationMessage
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"
                        @onclick="() => OnConfirmationChange(false)">
                    Cancel
                </button>
                @if (IsProcessStart)
                {
                    <button type="button" class="btn btn-danger">
                        <i class="fa fa-spin fa-spinner"></i> Processing
                    </button>
                }
                else
                {
                    <button type="button" class="btn btn-danger"
                            @onclick="() => OnConfirmationChange(true)">
                        Delete
                    </button>
                }

            </div>
        </div>
    </div>
</div>